rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PHASE 0 SECURITY LOCKDOWN - TEMPORARY TOTAL FIREWALL
    // All access blocked while security audit is in progress
    // Original rules backed up in firestore.rules.backup
    // Will be replaced with proper membership-based rules in Phase 3
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
